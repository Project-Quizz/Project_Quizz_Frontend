@{
	ViewData["Title"] = "Multiplayer Einstellungen";
}

<div class="card text-center border border-primary shadow-0">
	<div class="card-header"><h2>Multiplayer Einstellungen</h2></div>

	<div class="card-body mt-4 mb-4">
		<form asp-controller="MultiplayerQuiz" asp-action="CreateMultiplayerSession">
			<div class="card-body">
				<select class="form-control mb-4" id="categorieId" name="categorieId" data-mdb-select-init>
					<option value="">Kategorie auswählen</option>
					@foreach (var category in ViewBag.Categories)
					{
						<option value="@category.CategorieId">@category.Name</option>
					}
				</select>
				<label class="form-label select-label">Kategorie</label>
			</div>
			<br />
			<button type="submit" class="btn btn-success btn-menu" id="startQuizButton" disabled>Bestätigen</button>
		</form>
	</div>
	<div class="card-footer d-flex justify-content-between align-items-center">
		<a type="button" class="btn btn-primary btn-menu-footer" asp-controller="MultiplayerQuiz" asp-action="SelectOpponent" id="leftButton">Gegenspieler</a>
		<a type="button" class="btn btn-primary btn-menu-footer" asp-controller="Home" asp-action="Index" id="leftButton">Zum Hauptmenü</a>
	</div>
</div>


@section scripts {
	<script type="text/javascript">
		document.addEventListener('DOMContentLoaded', function () {
			var selectElement = document.getElementById('categorieId');
			var submitButton = document.getElementById('startQuizButton');

			selectElement.addEventListener('change', function () {
				submitButton.disabled = !this.value;
			});
		});
	</script>

}
